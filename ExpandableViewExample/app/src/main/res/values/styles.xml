    <!-- Título del control(field) en el formulario  -->
    <style name="field_text">
        <item name="android:textColor">@color/field_title</item>
        <item name="android:textSize">@dimen/field_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Texto respuesta del control(field) en el formulario -->
    <style name="field_text_in">
        <item name="android:textColor">@color/field_in</item>
        <item name="android:textSize">@dimen/field_in</item>
        <item name="android:background">@drawable/background_inputext</item>
        <item name="android:height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Título del control(field) calculado en el formulario  -->
    <style name="field_text_calc">
        <item name="android:textColor">@color/field_title</item>
        <item name="android:textSize">@dimen/field_calc_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Texto respuesta del control(field) calculado en el formulario -->
    <style name="field_text_calc_in" parent="field_text_in">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/field_calc_in</item>
        <item name="android:paddingLeft">@dimen/field_calc_in_padding</item>
        <item name="android:paddingRight">@dimen/field_calc_in_padding</item>
        <item name="android:background">@color/background_corporativo</item>
    </style>

    <style name="field_text_color_background">
        <item name="android:textColor">@color/background_corporativo</item>
        <item name="android:textSize">@dimen/field_background_corporativo</item>
    </style>
    <style name="field_text_bt">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/field_bt_in</item>
    </style>
    <style name="texto_carrusel_productos">
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
	    <item name="android:textSize">10sp</item>
	</style>

    <style name="field_input_text">
