	<style name="AboutTheme" parent="AppTheme">
		<item name="windowActionBar">true</item>
	</style>

	<style name="AppTheme" parent="BaseTheme">
	</style>

    <!-- Tema base de la aplicación  -->
	<style name="BaseTheme" parent="Theme.AppCompat">
		<!-- Here we setting appcompat’s actionBarStyle -->
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

	</style>

    <!-- Botón con fondo naranja y texto en blanco -->
    <style name="BotonNaranja" parent="BaseTheme">
        <item name="android:background">@color/background_corporativo</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Botón con fondo blanco y texto en naranja -->
    <style name="BotonBlanco" parent="BaseTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/background_corporativo</item>
    </style>

    <!-- Campo calculado de la oferta con fondo naranja y texto en blanco -->
    <style name="CampoCalculado" parent="BaseTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/background_corporativo</item>
    </style>



    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/background_corporativo</item>
        <item name="android:homeAsUpIndicator">@color/white</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">false</item>
		<item name="color">@android:color/white</item>
	</style>


